<Window x:Class="Lesson5.WinDepEdt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson5"
        mc:Ignorable="d"
        x:Name="WinDepartmentEdit"
        Title="Name of department" Height="100" Width="300">

    <StackPanel x:Name="mainStackPanel" >
        <Label Content="Change name of department:" Margin="5,0,5,0"/>
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        <Button x:Name="btnAddDep" Content="Add New Department"
                Visibility="Collapsed"
                Margin="150,5,7,0"/>
    </StackPanel>
</Window>
